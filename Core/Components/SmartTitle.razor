@if (string.IsNullOrEmpty(PreviousPage))
{
    <PageTitle>@Name - @GlobalConsts.SITE_NAME</PageTitle>
}
else
{
    <PageTitle>@Name - @PreviousPage - @GlobalConsts.SITE_NAME</PageTitle>
}

<HeadContent>
    <meta content="article" property="og:type" data-rh="true">
    <meta Title="title" content="@Name - @GlobalConsts.SITE_NAME" property="og:title" data-rh="true">
</HeadContent>
<div>
    @if (Heading)
    {
        <h2>@Name</h2>
    }
</div>

@code {

    /// <summary>
    /// The Name of the current page.
    /// </summary>
    [Parameter, EditorRequired]
    public string? Name { get; set; } = string.Empty;

    /// <summary>
    /// Determines whether or not to display the heading.
    /// </summary>
    [Parameter]
    public bool Heading { get; set; } = true;

    /// <summary>
    /// The Title of the previous page visited by the user.
    /// </summary>
    [Parameter]
    public string? PreviousPage { get; set; } = string.Empty;

}

